@page
@model Inchiriere_Instrumente.Pages.Instruments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instrument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Instrument.ID" />
            <div class="form-group">
                <label asp-for="Instrument.Name" class="control-label"></label>
                <input asp-for="Instrument.Name" class="form-control" />
                <span asp-validation-for="Instrument.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.Price" class="control-label"></label>
                <input asp-for="Instrument.Price" class="form-control" />
                <span asp-validation-for="Instrument.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.PublishingDate" class="control-label"></label>
                <input asp-for="Instrument.PublishingDate" class="form-control" />
                <span asp-validation-for="Instrument.PublishingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.OwnerID" class="control-label"></label>
                <input asp-for="Instrument.OwnerID" class="form-control" />
                <span asp-validation-for="Instrument.OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
             <div class="table">
             <table>
             <tr>
             @{
             int cnt = 0;
             foreach (var cat in Model.AssignedCategoryDataList)
            {
                if (cnt++ % 3 == 0)
            {
            @:</tr><tr>
            }
            @:<td>
             <input type="checkbox"
             name="selectedCategories"
             value="@cat.CategoryID"
             @(Html.Raw(cat.Assigned ?
            "checked=\"checked\"" : "")) />
             @cat.CategoryID @: @cat.Name
             @:</td>
             }
             @:</tr>
            }
             </table>
             </div>
             </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
